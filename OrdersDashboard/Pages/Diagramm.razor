<div class="wrapper">
    <div class="cards">
        <div class="item card1">
            <SfCard CssClass="card-class">
                <CardHeader Title="Total" SubTitle="EMPLOYEES:" ImageUrl="images/info.png" ImagePosition="ImagePosition.Left"></CardHeader>
                <CardContent Content="12" EnableSeperator="true"></CardContent>
            </SfCard>
        </div>
        <div class="item card2">
            <SfCard CssClass="card-class">
                <CardHeader Title="Total" SubTitle="PRODUCTS:" ImageUrl="images/info.png" ImagePosition="ImagePosition.Left"></CardHeader>
                <CardContent Content="87" EnableSeperator="true"></CardContent>
            </SfCard>
        </div>
        <div class="item card3">
            <SfCard CssClass="card-class">
                <CardHeader Title="Total" SubTitle="ORDERS:" ImageUrl="images/info.png" ImagePosition="ImagePosition.Left"></CardHeader>
                <CardContent Content="154" EnableSeperator="true"></CardContent>
            </SfCard>
        </div>
        <div class="item card4">
            <SfCard CssClass="card-class">

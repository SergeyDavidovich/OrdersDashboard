@code {
    #region
    SfAccumulationChart pie = new SfAccumulationChart();

    public List<OrdersByCountry> OrdersByCountries = new ();
    public List<SalesByCategory> SalesByCategories = new ();
    public List<SalesByCountry> SalesByCountries = new ();

    protected override async Task OnInitializedAsync()
    {
#if DEBUG
        await Task.Delay(6000);
#endif
